<h1>Song Library</h1>

<table>
  <thead>
  <table border="1">
    <tr>
      <th>Song Title</th>
      <th>Album Title</th>
      <th>Artist</th>
      <th>Track</th>
      <th>Duration</th>
      <th>Genre</th>
      <th>Path</th>
      <th>Filename</th>
      <th>Composer</th>
      <th>Musicians</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.song_title %></td>
        <td><%= song.album.album_title %></td>
        <td><%= song.album.artist.name %></td>
        <td><%= song.track %></td>
        <td><%= song.durationmin %></td>
        <td><%= song.album.genre %></td>
        <td><%= song.path %></td>
        <td><%= song.filename %></td>
        <td><%= song.composer %></td>
        <td><center>
          <% song.musicians.map do |m| %>
            <%= "#{m.first_name} #{m.last_name}" %><br>
          <% end %>
        </center></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

