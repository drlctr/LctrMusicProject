<h1>Listing songs</h1>

<table>
  <thead>
    <tr>
      <th>Song title</th>
      <th>Track</th>
      <th>Duration</th>
      <th>Path</th>
      <th>Filename</th>
      <th>Composer</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.song_title %></td>
        <td><%= song.track %></td>
        <td><%= song.duration %></td>
        <td><%= song.path %></td>
        <td><%= song.filename %></td>
        <td><%= song.composer %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

